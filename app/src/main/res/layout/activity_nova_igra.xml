<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/snapssl"
    tools:context=".NovaIgraActivity">

    <Button
        android:id="@+id/Igr1"
        android:layout_width="199dp"
        android:layout_height="103dp"
        android:background="#00000000"
        android:text="igr1scor"
        android:textSize="20sp"
        app:backgroundTint="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.281" />

    <Button
        android:id="@+id/Igr2"
        android:layout_width="210dp"
        android:layout_height="102dp"
        android:background="#00FFFFFF"
        android:text="igr2scor"
        android:textSize="20sp"
        app:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.281" />

    <Button
        android:id="@+id/Igra_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:text="Igra"
        android:textSize="16sp"
        app:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Zvanja_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Igr1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Zvanja_button"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:text="ZVANJA"
        android:textSize="16sp"
        app:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Igr2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#00FFFFFF"
        android:text="POVRATAK"
        android:textSize="20sp"
        app:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/confirm_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Igra_button" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="210dp"
        android:layout_height="100dp"
        android:background="#00FFFFFF"
        android:text="DONE"
        android:textSize="20sp"
        app:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Zvanja_button" />

    <Button
        android:id="@+id/zadnjiStihButton"
        android:layout_width="191dp"
        android:layout_height="65dp"
        android:background="#00FFFFFF"
        android:text="Zadnji Å tih"
        android:textSize="16sp"
        app:backgroundTint="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.559" />
</androidx.constraintlayout.widget.ConstraintLayout>